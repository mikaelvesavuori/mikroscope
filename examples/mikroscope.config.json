{
  "dbPath": "./data/mikroscope.db",
  "logsPath": "./logs",
  "host": "127.0.0.1",
  "port": 4310,
  "protocol": "http",
  "apiToken": "replace-with-api-token",
  "authUsername": "admin",
  "authPassword": "replace-with-strong-password",
  "corsAllowOrigin": "*",
  "ingestProducers": "backend-token=backend-api,frontend-token=frontend-web",
  "ingestMaxBodyBytes": 1048576,
  "ingestAsyncQueue": true,
  "ingestQueueFlushMs": 25,
  "disableAutoIngest": false,
  "ingestIntervalMs": 2000,
  "dbRetentionDays": 30,
  "dbAuditRetentionDays": 365,
  "logRetentionDays": 30,
  "logAuditRetentionDays": 365,
  "maintenanceIntervalMs": 21600000,
  "minFreeBytes": 268435456,
  "alertWebhookUrl": null,
  "alertIntervalMs": 30000,
  "alertWindowMinutes": 5,
  "alertErrorThreshold": 20,
  "alertNoLogsThresholdMinutes": 0,
  "alertCooldownMs": 300000,
  "alertWebhookTimeoutMs": 5000,
  "alertWebhookRetryAttempts": 3,
  "alertWebhookBackoffMs": 250
}

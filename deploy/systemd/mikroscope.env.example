# Required runtime paths
MIKROSCOPE_LOGS_PATH=/srv/mikroscope/logs
MIKROSCOPE_DB_PATH=/srv/mikroscope/data/mikroscope.db

# Required bind settings
MIKROSCOPE_HOST=127.0.0.1
MIKROSCOPE_PORT=4310

# Optional auth for /api/* routes
MIKROSCOPE_API_TOKEN=replace-me
MIKROSCOPE_AUTH_USERNAME=
MIKROSCOPE_AUTH_PASSWORD=

# Optional ingest producer mapping
# Example: token-a=backend-api,token-b=frontend-web
MIKROSCOPE_INGEST_PRODUCERS=

# Optional CORS allow list
MIKROSCOPE_CORS_ALLOW_ORIGIN=*

# Optional alerting
MIKROSCOPE_ALERT_WEBHOOK_URL=
